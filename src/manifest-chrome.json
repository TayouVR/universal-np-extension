{
  "manifest_version": 2,

  "name": "Universal Now Playing Companion",
  "description": "Browser helper for the desktop application, Universal Now Playing",
  "version": "1.0.3",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "webRequest",
    "activeTab",
    "tabs",
    "*://*.mixcloud.com",
    "*://*.pandora.com",
    "*://*.play.google.com",
    "*://*.open.spotify.com",
    "*://*.soundcloud.com",
    "*://*.tunein.com",
    "*://*.youtube.com",
    "*://*.deezer.com",
    "*://*.app.plex.tv",
    "*://*.hypem.com",
    "*://*.tidal.com"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [ "background.js" ],
    "persistent": true
  }
}

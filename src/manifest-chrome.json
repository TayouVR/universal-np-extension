{
  "manifest_version": 2,

  "name": "Universal Now Playing Companion",
  "description": "Browser helper for the desktop application, Universal Now Playing",
  "version": "1.0.0",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "webRequest",
    "activeTab",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [ "background.js" ],
    "persistent": true
  }
}
